@{
  Layout = "_Layout";
}

@model Factory.Models.Machine

<h2>Add an Engineer</h2>

<h4>Add an engineer licensed to repair this machine: @Html.DisplayFor(model => model.BrandName) @Html.DisplayFor(model => model.ModelName)</h4>

@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.MachineId)

  @Html.Label("Select an Engineer")
  @Html.DropDownList("EngineerId")

  <input type="submit" value="Save" class="btn btn-success" />
}
